@model WebApplication3.Models.Genre


<h4>Please input how many top Genres over time to show :</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <title>Input For ReportIII</title>
    </head>
    <body>
        <form method="post">
            <fieldset>
                <div>
                    <label for="TopNum">Number:</label>
                    <input type="number" name="TopNum" min="1" max="100" value="10" />
                </div>
                <div>
                    <label>&nbsp;</label>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </fieldset>
        </form>
    </body>
}