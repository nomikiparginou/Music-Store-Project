@model WebApplication3.Models.Artist

@{
    ViewBag.Title = "InputForm";
}

<h4>Please input how many top artists you wish to view and for which period of time :</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <title>Input Form</title>
    </head>
    <body>
        <form method="post">
            <fieldset>
                <div>
                    <label for="TopNum">How many top Artists:</label>
                    <input type="number" name="TopNum" min="1" max="100" value="10" />
                </div>
                <div>
                    <label for="BeginDate">Begin Date:</label>
                    <input type="date" id="start" name="BeginDate"
                           value="2009-01-01"
                           min="2009-01-01" max="2014-12-31">
                </div>
                <div>
                    <label for="EndDate">EndDate:</label>
                    <input type="date" id="end" name="EndDate"
                           value="2009-01-01"
                           min="2009-01-01" max="2014-12-31">
                </div>
                <div>
                    <label>&nbsp;</label>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </fieldset>
        </form>
    </body>
}
<div>
    @Html.ActionLink("Back to Home", "Index")
</div>