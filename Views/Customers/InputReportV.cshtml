@model WebApplication3.Models.Customer

<h3>Please enter Customer and Employee Name you wish to view Invoices :</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <title>Input Form</title>
    </head>
    <body>
        <form method="post">
                <div>
                    @Html.DropDownList("CustId", ViewBag.Customers as SelectList, "Select Customer", new { @class = "form-control" })
                </div>
                <div>
                    @Html.DropDownList("EmpId", ViewBag.Employees as SelectList, "Select Employee", new { @class = "form-control" })
                </div>
                <br />
                <div>
                    <label for="BeginDate">Begin Date:</label>
                    <input type="date" id="start" name="BeginDate"
                           value=""
                           min="2009-01-01" max="2014-12-31">
                </div>
                <div>
                    <label for="EndDate">EndDate:</label>
                    <input type="date" id="end" name="EndDate"
                           value=""
                           min="2009-01-01" max="2014-12-31">
                </div>
                <div>
                    <label>&nbsp;</label>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
        </form>
    </body>
}

